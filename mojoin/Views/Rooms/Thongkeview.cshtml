@model IEnumerable<mojoin.Models.Room>

<!-- Thêm thư viện Highcharts (nếu chưa có) -->
<script src="https://code.highcharts.com/highcharts.js"></script>

<!-- Div để chứa biểu đồ -->
<div id="container" style="width: 600px; height: 400px;"></div>

<!-- Script để vẽ biểu đồ -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Lấy dữ liệu từ model
        var viewCount = @Model.FirstOrDefault()?.ViewCount;
        var title = @Model.FirstOrDefault()?.Title;

        // Vẽ biểu đồ sử dụng Highcharts
        Highcharts.chart('container', {
            chart: {
                type: 'column'
            },
            title: {
                text: title
            },
            xAxis: {
                categories: ['View Count']
            },
            yAxis: {
                title: {
                    text: 'Amount'
                }
            },
            series: [{
                name: 'View Count',
                data: [viewCount]
            }]
        });
    });
</script>


