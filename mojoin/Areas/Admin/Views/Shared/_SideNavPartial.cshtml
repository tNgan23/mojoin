@using System.Security.Claims;
<div class="side-nav">
    <div class="side-nav-inner">
        <ul class="side-nav-menu scrollable">
            <li class="nav-item dropdown open">
                <a class="dropdown-toggle" href="javascript:void(0);">
                    <span class="icon-holder">
                        <i class="anticon anticon-dashboard"></i>
                    </span>
                    <span class="title">Dashboard</span>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="dropdown-toggle" href="javascript:void(0);">
                    <span class="icon-holder">
                        <i class="anticon anticon-appstore"></i>
                    </span>
                    <span class="title">Quản lý Bài đăng</span>
                    <span class="arrow">
                        <i class="arrow-icon"></i>
                    </span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        @*-1 là hiện toàn bộ*@
                        <a asp-area="Admin" asp-controller="Rooms" asp-action="Index" asp-route-isActive="-1">Danh sách Bài Đăng</a>
                    </li>
                    <li>
                        @*sau này muốn thêm trang hiển thị trạng thái nào - cứ copy cái đó ra, đổi số là được*@
                        <a asp-area="Admin" asp-controller="Rooms" asp-action="Index" asp-route-isActive="4">Danh sách Phê duyệt</a>
                    </li>
                    
                    <li>
                        <a asp-area="Admin" asp-controller="RoomReports" asp-action="Index">Danh sách Báo cáo</a>
                    </li>
                </ul>
            </li>
            <li class="nav-item dropdown">
                <a class="dropdown-toggle" href="javascript:void(0);">
                    <span class="icon-holder">
                        <i class="anticon anticon-hdd"></i>
                    </span>
                    <span class="title">Quản lý Tài khoản</span>
                    <span class="arrow">
                        <i class="arrow-icon"></i>
                    </span>
                </a>
                <ul class="dropdown-menu">
                    @{
                        var identity = (ClaimsIdentity)User.Identity;

                        // Lấy giá trị của các đối tượng Claim
                        string firstName = identity.FindFirst("FirstName")?.Value;
                        string lastName = identity.FindFirst("LastName")?.Value;
                        string userId = identity.FindFirst("UserId")?.Value;
                        string roleAcc = identity.FindFirst("RoleAcc")?.Value;
                    }
                    @if(roleAcc == "2")
                    {
                        <li>
                            <a asp-area="Admin" asp-controller="Clients" asp-action="Index">Danh sách Khách hàng</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-area="Admin" asp-controller="Admin" asp-action="Index">Lịch sử giao dịch</a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Roles" asp-action="Index">Quyền truy cập</a>
                        </li>

                        <li>
                            <a asp-area="Admin" asp-controller="Users" asp-action="Index">Danh sách Người dùng</a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Staffs" asp-action="Index">Danh sách Nhân viên</a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Clients" asp-action="Index">Danh sách Khách hàng</a>
                        </li>
                    }
                    
                </ul>
        </ul>
    </div>
</div>