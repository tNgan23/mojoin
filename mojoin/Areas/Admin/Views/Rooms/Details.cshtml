                    }
                </div>
            </div>
        </div>*@
        <div class="col-md-6">
            <hr />
            <div id="carouselExample" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @if (!string.IsNullOrEmpty(Model.Video))
                    {
                        <!-- Phần hiển thị video -->
                        <div class="carousel-item active">
                            <div class="embed-responsive embed-responsive-16by9">
                                <iframe class="embed-responsive-item" src="@Model.Video" allowfullscreen></iframe>
                            </div>
                        </div>
                    }
                    @foreach (var item in Model.RoomImages)
                    {
                        <div class="carousel-item">
                            <img src="@item.Image" class="d-block w-100" style="object-fit: cover; height: 100%; width: 100%;" />
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <a href="#" onclick="goBack()" class="btn btn-secondary ml-3">Quay lại danh sách</a>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
}